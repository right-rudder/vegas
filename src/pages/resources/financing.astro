---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ImageComp from "../../components/ImageComp.astro";
import Banner from "../../components/Banner.astro";
import { FaArrowRight } from "react-icons/fa";
import CTAIntroFlight from "../../components/CTAIntroFlight.astro";
import { SITE_DESCRIPTION, KEYWORDS } from "../../data/consts";
import CTALeft from "../../components/CTAs/CTALeft.astro";

const data = {
    siteTitle: "Stratus Financial Partnership | Vegas Aviation",
    siteDescription: SITE_DESCRIPTION,
    siteKeywords: KEYWORDS,

    header: {
        image: {
            src: "/src/assets/cfi-group-airplane-vegas-aviation-las-vegas-flight-instructor.webp",
            alt: "Vegas Aviation and Stratus Financial partnership graphic",
        },
        eyebrow: "Financing Available",
        title: "Vegas Aviation Partnership With Stratus Financial",
        subTitle:
            "Achieve your aviation dreams with flexible, student-focused financing options designed specifically for pilots.",
    },

    introSection: {
        title: "Your Aviation Dreams Start Here",
        description:
            "Stratus Financial was founded by FAA Certificated Flight and Ground Instructors who understand the passion, commitment, and financial challenges of becoming a pilot. Their mission is simple: make aviation training accessible to everyone by offering exceptional funding options and student-first support.",
        image: {
            src: "/src/assets/cfi-group-airplane-vegas-aviation-las-vegas-flight-instructor.webp",
            alt: "Student pilot shaking hands with a flight instructor",
        },
    },

    partnershipSection: {
        header: "Stratus Financial Benefits",
        title: "Flexible Financing Tailored for Pilots",
        description:
            "You’re not just a number to Stratus. Their team evaluates you as a whole aviator — not just a credit score — and helps you prepare for a stronger financial application before you even begin.",
        lendingBenefits: [
            "Industry-leading rates for zero-to-hero pilot training programs",
            "Full financing available for the entirety of your flight training and more",
            "Affordable payment options with 12-month deferment during training and job placement",
            "Zero penalties for early payoff — close your loan anytime with no consequences",
        ],
    },

    careerSupportSection: {
        header: "Career Resources",
        title: "Stratus Has You Covered Beyond Financing",
        description:
            "Stratus Financial supports your entire aviation journey with mentorship and resources designed to help you succeed in training and launch your aviation career with confidence.",
        resources: [
            "One-on-one counseling with certified flight and ground instructors",
            "Resume building, editing, and professional guidance",
            "AMA (Ask Me Anything) sessions with Part 121 & 135 pilots — learn what it’s like and how to get hired",
        ],
    },

    applicationSection: {
        title: "Ready to Begin?",
        description:
            "We’re excited to support your aviation journey and help you take the next step toward your dream career. If you're ready to start, you can apply today — and if needed, your co-borrower can submit their application as well.",
        primaryButton: {
            title: "Apply Now",
            link: "https://your-application-link.com", // replace with real Stratus link
        },
        secondaryNote:
            "If you have limited credit or income, a co-borrower may be required. Please have them complete their application separately.",
    },

    CTASection: {
        title: "Start Flying Today!",
        subTitle:
            "Vegas Aviation provides top-tier flight training, aircraft maintenance, and aircraft rentals. Contact us today to begin your journey.",
        button: {
            title: "Contact Us",
            link: "/contact",
        },
    },

    relatedArticles: {
        header: "Related Articles",
        articles: [
            {
                category: ["Events", "VA News"],
                title: "Turn Your Flight Training Into College Credit — Join Purdue Global at Vegas Aviation, Oct. 31!",
                description:
                    "Learn how your flight training can count toward a Purdue Global Bachelor’s Degree in Professional Flight. Save up to $28,000 in tuition and earn up to 45 transfer credits.",
                image: {
                    src: "/src/assets/old-website/purdue_event.jpg",
                    alt: "Purdue Global aviation students preparing for landing in jet cockpit",
                },
                link: "/blog/purdue-event-oct-31",
            },
            {
                category: ["VA News"],
                title: "Vegas Aviation Partnership With Purdue Global",
                description:
                    "Our partnership with Purdue Global provides flight students with opportunities to advance their education and aviation career through online degree programs.",
                image: {
                    src: "/src/assets/old-website/purdue_partnership.jpg",
                    alt: "Vegas Aviation and Purdue Global partnership announcement",
                },
                link: "/blog/purdue-partnership",
            },
            {
                category: ["Events", "VA News"],
                title: "Announcing Vegas Aviation’s Next Ground School for Private Pilot and Instrument Rating — December 2024",
                description:
                    "Join our Private Pilot and Instrument Rating Ground School this December. Learn in a dynamic, instructor-led group setting to supplement your online studies.",
                image: {
                    src: "/src/assets/old-website/ground_school.jpg",
                    alt: "Classroom with aviation ground school students",
                },
                link: "/blog/december-ground-school",
            },
        ],
    },
};



---
<BaseLayout
  siteTitle={data.siteTitle}
  siteDescription={data.siteDescription}
  siteKeywords={data.siteKeywords}>
  <Banner data={data.header} slot="hero" />
  <CTALeft content={data.introSection} />
  <CTAIntroFlight />
</BaseLayout>
