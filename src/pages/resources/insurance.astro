---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Banner from "../../components/Banner.astro";
import CTASimple from "../../components/CTAs/CTASimple.astro";
import PartnerSection from "../../components/sections/PartnerSection.astro";
import Partners from "../../components/Partners.astro";

import { data } from "../../data/resources";
---
<BaseLayout
  siteTitle={data.insurance.siteTitle}
  siteDescription={data.siteDescription}
  siteKeywords={data.siteKeywords}>

  <Banner data={data.insurance.header} slot="hero" />

  <PartnerSection data={data.insurance.requirements} />
  
  <section class="overflow-hidden bg-accent-100 text-accent-900">
    <div class="max-w-7xl text-center mx-auto px-4 pt-12 sm:px-8 lg:px-16">
      <Partners data={data.insurance} />
    </div>
  </section>
  
  <CTASimple content={data.insurance.cta} />
</BaseLayout>
