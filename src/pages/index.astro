---
import BaseLayout from "../layouts/BaseLayout.astro";
import HomePageAbout from "../components/HomePageAbout.astro";
import ProgramsList from "../components/ProgramsList.astro";
import CTAWhyUs from "../components/CTAs/CTAWhyUs.astro";
import ContactForm from "../components/forms/ContactForm.astro";
import CTAIntroFlight from "../components/CTAs/CTAIntroFlight.astro";
import FAQs from "../components/FAQs.astro";
import BannerHomepage from "../components/BannerHomepage.astro";
import BecomePilotSummary from "../components/BecomePilotSummary.astro";
import BlogFeed from "../components/BlogFeed.astro";
import Marquee from "../components/Marquee.astro";
import GoogleReviews from "../components/GoogleReviews.astro";

import { faq } from "../data/faqs";
import contactData from "../data/forms/contact.js";
import { partners } from "../data/partners";

const data = {
  image: {
    src: "/src/assets/las-vegas-nevada-flight-school-pilot-training-flying-lessons-learn-to-fly-vegas-aviation-copy.webp",
    alt: "Aircraft flying horizon in the background",
  },
  eyebrow: `Call Us:`,
  title: "<b>Become a Pilot<br>at Vegas Aviation</b>",
  subTitle: `<b class="text-primary-500">30,000 new airline pilots</b> needed every year.<br>Why not you?`,
  heroCards: false,
  cta: [
    {
      url: "/enroll",
      text: "Start Flying",
    },
    {
      url: "/flight-training/#programs",
      text: "Training Process",
    },
  ],
};
---

<BaseLayout>
  <BannerHomepage data={data} />
  <BecomePilotSummary />
  <Marquee data={partners} />
  <ProgramsList />
  <HomePageAbout />
  <CTAWhyUs />
  <GoogleReviews />
  <!-- <TestimonialsCarousel
    items={[]}
    className="from-sky-900/30 to-accent-100 bg-linear-to-b text-accent-900"
    client:load
  /> -->
  <ContactForm content={contactData} />
  <FAQs faqs={faq.privatePilot.items} />
  <BlogFeed />
  <CTAIntroFlight />
</BaseLayout>