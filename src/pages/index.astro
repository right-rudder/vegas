---
import BaseLayout from "../layouts/BaseLayout.astro";
import HomePageAbout from "../components/HomePageAbout.astro";
import ProgramsList from "../components/ProgramsList.astro";
import CTAWhyUs from "../components/CTAWhyUs.astro";
import ContactForm from "../components/forms/ContactForm.astro";
import TestimonialsCarousel from "../components/TestimonialsCarousel.jsx";
import CTAIntroFlight from "../components/CTAIntroFlight.astro";
import FAQs from "../components/FAQs.astro";
import BannerHomepage from "../components/BannerHomepage.astro";

import { faq } from "../data/faqs";
import contactData from "../data/forms/contact.js";

const data = {
  image: {
    src: "/src/assets/stock/aircraft-flying-horizon-vegas-aviation-nevada-career-pilot.jpg",
    alt: "Aircraft flying horizon in the background",
  },
  eyebrow: "Premier Flight Training in Las Vegas",
  title: "<b>Become a Pilot</b></br>Make Your Dream Come True",
  heroCards: false,
  cta: [
    {
      url: "/contact",
      text: "Start Flying",
    }
  ],
};
---

<BaseLayout>
  <BannerHomepage data={data} />
  <HomePageAbout />
  <ProgramsList />
  <CTAWhyUs />
  <TestimonialsCarousel
    items={[]}
    className="from-primary-100/90 to-accent-100 bg-linear-to-b px-5 py-16 text-accent-900 md:px-8 md:py-20 lg:px-10 lg:py-24"
    client:load
  />
  <ContactForm content={contactData} />
  <CTAIntroFlight />
  <FAQs faqs={faq.privatePilot.items} />
</BaseLayout>
