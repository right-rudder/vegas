---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Banner from "../../components/Banner.astro";
import CTAIntroFlight from "../../components/CTAs/CTAIntroFlight.astro";
import CTASimple from "../../components/CTAs/CTASimple.astro";
import CardStats from "../../components/CardStats.astro";
import CardList from "../../components/CardList.astro";

import { data } from "../../data/services/index";
---

<BaseLayout siteTitle={data.siteTitle} siteDescription={data.siteDescription} siteKeywords={data.siteKeywords}>
  <Banner data={data.header} slot="hero" />

  <CTASimple content={data.aboutSection} />

  <CardStats content={data.servicesSection} />

  <CardList content={data.fleetSection} />

  <CTAIntroFlight />
</BaseLayout>
