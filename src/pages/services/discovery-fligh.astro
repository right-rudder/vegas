---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ImageComp from "../../components/ImageComp.astro";
import Banner from "../../components/Banner.astro";
import { FaArrowRight } from "react-icons/fa";
import CTAIntroFlight from "../../components/CTAIntroFlight.astro";
import { SITE_DESCRIPTION, KEYWORDS } from "../../data/consts";

const data = {
    siteTitle: "Discovery Flight | Vegas Aviation",
    siteDescription: SITE_DESCRIPTION,
    siteKeywords: KEYWORDS,

    header: {
        image: {
            src: "/src/assets/vegas-aviation-discovery-flight.jpg",
            alt: "Student taking the controls during a discovery flight at Vegas Aviation",
        },
        eyebrow: "Discovery Flight",
        title: "Your First Step Into the World of Aviation",
        subTitle:
            "Curious about becoming a pilot? A Discovery Flight lets you take the controls and experience what it's really like to fly—no experience needed.",
    },

    whatIsSection: {
        underHeader: "What Is a Discovery Flight?",
        title: "Take the Controls and Experience Real Flying",
        description:
            "A Discovery Flight is an introductory aviation experience where YOU get to take the controls of the airplane under the guidance of one of our Certified Flight Instructors (CFI). After your flight, you’ll receive a detailed post-flight briefing. The best part? Your flight time counts toward your Private Pilot License requirements and can be logged in your Pilot Logbook.",
        button: {
            title: "Book a Flight",
            link: "/contact",
        },
        image: {
            src: "/src/assets/vegas-aviation-discovery-flight-cockpit.jpg",
            alt: "Student flying next to a Certified Flight Instructor during a discovery flight",
        },
    },

    reviewsSection: {
        header: "What Our Students Say",
        title: "Real Experiences From Real Pilots",
        description:
            "From first-time aviators to long-term students, people love their experience at Vegas Aviation. Here are just a few of the many reviews praising our instructors, aircraft, and welcoming environment.",
        
        // Keep these as placeholders; you can dynamically inject later if needed
        reviews: [
            {
                name: "Fly Runway Heading",
                text: "This flight school has blown me away. The planes are in EXCELLENT condition... This is what really made me love Vegas Aviation.",
                avatar: "/src/assets/reviews/fly-runway-heading.jpg",
            },
            {
                name: "Zak Bay",
                text: "Great place to learn how to fly!!",
                avatar: "/src/assets/reviews/zak-bay.jpg",
            },
            {
                name: "Brad Sh",
                text: "The aircraft are always in top shape, the owner and staff are amazing and feel like family...",
                avatar: "/src/assets/reviews/brad-sh.jpg",
            },
            {
                name: "Dillon Lewis",
                text: "Best Flight School!",
                avatar: "/src/assets/reviews/dillon-lewis.jpg",
            },
            {
                name: "J G",
                text: "Came from Seattle to train for 2 weeks—great instructors and an awesome experience.",
                avatar: "/src/assets/reviews/j-g.jpg",
            },
        ],

        // Optionally add a "View More" if you plan to paginate
        showMore: {
            title: "Read More Reviews",
            link: "/reviews",
        },
    },

    CTASection: {
        title: "Discovery Flight",
        subTitle: "Ready to take the controls? Contact our team and schedule your first flight.",
        button: {
            title: "Contact Us",
            link: "/contact",
        },
    },
};

---
<BaseLayout
  siteTitle={data.siteTitle}
  siteDescription={data.siteDescription}
  siteKeywords={data.siteKeywords}>
  <Banner data={data.header} slot="hero" />

  <CTAIntroFlight />
</BaseLayout>
