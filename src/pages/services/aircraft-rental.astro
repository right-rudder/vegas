---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Banner from "../../components/Banner.astro";
import CTASimple from "../../components/CTAs/CTASimple.astro";
import AircraftCards from "../../components/AircraftCards.astro";
import CenteredSection from "../../components/flight-training/CenteredSection.astro";

import { data } from "../../data/services/aircraft-rental";
---

<BaseLayout siteTitle={data.siteTitle} siteDescription={data.siteDescription} siteKeywords={data.siteKeywords}>
  <Banner data={data.header} slot="hero" />

  <CTASimple content={data.introSection} />

  <AircraftCards content={data.fleetSection} />

  <CenteredSection data={data.rentalPolicySection} />

  <CTASimple content={data.CTASection} />
</BaseLayout>
