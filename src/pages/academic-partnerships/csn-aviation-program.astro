---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ImageComp from "../../components/ImageComp.astro";
import Banner from "../../components/Banner.astro";
import { FaArrowRight } from "react-icons/fa";
import CTAIntroFlight from "../../components/CTAIntroFlight.astro";
import { SITE_DESCRIPTION, KEYWORDS } from "../../data/consts";
import CTALeft from "../../components/CTAs/CTALeft.astro";

const data = {
    siteTitle: "Stratus Financial Partnership | Vegas Aviation",
    siteDescription: SITE_DESCRIPTION,
    siteKeywords: KEYWORDS,


    header: {
        image: {
            src: "/src/assets/old-website/purdue_header.jpg", // replace with real image
            alt: "Vegas Aviation and Purdue Global partnership banner",
        },
        eyebrow: "Education Partnership",
        title: "CSN Aviation Program",
        subTitle:
            "CSN’s Aviation Technology Professional Pilot program provides an Associate of Applied Science (AAS) degree, blending comprehensive coursework with Vegas Aviation’s specialized flight training. Credits from this program can also be applied toward a Bachelor of Science in Professional Flight at Purdue University Global, creating a seamless pathway for career advancement.",
    },

    introSection: {
        title: "SN Aviation Program",
        description:
            "CSN’s Aviation Technology Professional Pilot program provides an Associate of Applied Science (AAS) degree, blending comprehensive coursework with Vegas Aviation’s specialized flight training. Credits from this program can also be applied toward a Bachelor of Science in Professional Flight at Purdue University Global, creating a seamless pathway for career advancement.",
        image: {
            src: "/src/assets/old-website/purdue_intro.jpg",
            alt: "Purdue Global aviation student with instructor",
        },
    },

    CTASection: {
        title: "Start Flying Today!",
        subTitle:
            "Vegas Aviation provides top-tier flight training, aircraft maintenance, and aircraft rentals. Contact us today to begin your journey.",
        button: {
            title: "Contact Us",
            link: "/contact",
        },
    },

    relatedArticles: {
        header: "Related Articles",
        articles: [
            {
                category: ["Events", "VA News"],
                title: "Turn Your Flight Training Into College Credit — Join Purdue Global at Vegas Aviation, Oct. 31!",
                description:
                    "Learn how your flight training can count toward a Purdue Global Bachelor’s Degree in Professional Flight. Save up to $28,000 in tuition and earn up to 45 transfer credits.",
                image: {
                    src: "/src/assets/old-website/purdue_event.jpg",
                    alt: "Purdue Global aviation students preparing for landing in jet cockpit",
                },
                link: "/blog/purdue-event-oct-31",
            },
            {
                category: ["VA News"],
                title: "Vegas Aviation Partnership With Purdue Global",
                description:
                    "Our partnership with Purdue Global provides flight students with opportunities to advance their education and aviation career through online degree programs.",
                image: {
                    src: "/src/assets/old-website/purdue_partnership.jpg",
                    alt: "Vegas Aviation and Purdue Global partnership announcement",
                },
                link: "/blog/purdue-partnership",
            },
            {
                category: ["Events", "VA News"],
                title: "Announcing Vegas Aviation’s Next Ground School for Private Pilot and Instrument Rating — December 2024",
                description:
                    "Join our Private Pilot and Instrument Rating Ground School this December. Learn in a dynamic, instructor-led group setting to supplement your online studies.",
                image: {
                    src: "/src/assets/old-website/ground_school.jpg",
                    alt: "Classroom with aviation ground school students",
                },
                link: "/blog/december-ground-school",
            },
        ],
    },
};



---
<BaseLayout
  siteTitle={data.siteTitle}
  siteDescription={data.siteDescription}
  siteKeywords={data.siteKeywords}>
  <Banner data={data.header} slot="hero" />
  <CTALeft content={data.introSection} />
  <CTAIntroFlight />
</BaseLayout>
