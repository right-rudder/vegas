---
const { content } = Astro.props;
---

<section
  class="relative isolate overflow-hidden bg-linear-to-b from-accent-100 via-white to-accent-100 text-accent-900"
>
  <div class="mx-auto max-w-7xl px-4 py-12 md:px-8 lg:px-10">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <p class="eyebrow-dark inline-flex items-center gap-2 tracking-widest">
        {content.eyebrow}
      </p>
      <h2 class="mt-4 text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl">
        {content.title}
      </h2>
      <p class="mt-6 text-lg md:text-xl text-accent-700">
        {content.description}
      </p>
    </div>

    <!-- Highlight Stats -->
    <div class="grid grid-cols-1 gap-6 mb-16 sm:grid-cols-2">
      {
        content.highlights.map((item: any) => (
          <a
            href={item.url}
            class="border border-accent-300 bg-white rounded-xl shadow-md p-6 text-center hover:shadow-xl hover:scale-105 duration-300"
          >
            <div class="flex justify-center mb-4">
              <div class="flex items-center justify-center size-14 rounded-full bg-primary-100 text-primary-600">
                <item.icon className="size-7" />
              </div>
            </div>
            <div class="text-2xl font-bold text-accent-900">{item.title}</div>
            <div class="text-lg font-semibold text-primary-600 uppercase tracking-wide mt-1">{item.subTitle}</div>
            <div class="text-base text-accent-600 mt-2">{item.description}</div>
          </a>
        ))
      }
    </div>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-10">
      <a href={content.cta.primary.href} class="btn-primary w-full sm:w-auto">
        {content.cta.primary.label}
      </a>
      <a href={content.cta.secondary.href} class="btn-primary w-full sm:w-auto">
        {content.cta.secondary.label}
      </a>
    </div>
  </div>
</section>
