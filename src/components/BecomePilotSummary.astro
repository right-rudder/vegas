---
import { FaArrowRight, FaPlane, FaClock, FaDollarSign, FaGraduationCap } from "react-icons/fa";

const data = {
  eyebrow: "GET STARTED",
  title: "Your Path to Becoming a Pilot",
  description: "From your first discovery flight to earning your private pilot certificate, we'll guide you through every step of the journey.",
  highlights: [
    {
      icon: FaClock,
      stat: "40-60",
      unit: "Hours",
      label: "Minimum flight time for private pilot certificate"
    },
    {
      icon: FaDollarSign,
      stat: "Flexible",
      unit: "Financing",
      label: "Training programs to fit your budget"
    },
    {
      icon: FaGraduationCap,
      stat: "Experienced",
      unit: "Instructors",
      label: "Learn from certified professionals"
    },
    {
      icon: FaPlane,
      stat: "Modern",
      unit: "Fleet",
      label: "Well-maintained training aircraft"
    }
  ],
  cta: {
    primary: {
      label: "Book a Discovery Flight",
      href: "/discovery-flight"
    },
    secondary: {
      label: "View Training Programs",
      href: "/flight-training"
    }
  }
};
---

<section class="relative isolate overflow-hidden bg-linear-to-b from-white via-accent-100 to-white text-accent-900">
  <div class="mx-auto max-w-7xl px-5 py-16 md:px-8 md:py-20 lg:px-10 lg:py-24">
    
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <p class="eyebrow-dark inline-flex items-center gap-2 tracking-widest">
        <span class="size-1.5 rounded-full bg-primary-500"></span>
        {data.eyebrow}
      </p>
      <h2 class="mt-4 text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl">
        {data.title}
      </h2>
      <p class="mt-6 text-lg md:text-xl text-accent-700">
        {data.description}
      </p>
    </div>

    <!-- Highlight Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {data.highlights.map((item) => (
        <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-xl hover:scale-105 duration-300">
          <div class="flex justify-center mb-4">
            <div class="flex items-center justify-center size-14 rounded-full bg-primary-100 text-primary-600">
              <item.icon className="size-7" />
            </div>
          </div>
          <div class="text-3xl font-bold text-accent-900">{item.stat}</div>
          <div class="text-sm font-semibold text-primary-600 uppercase tracking-wide mt-1">{item.unit}</div>
          <div class="text-sm/4 text-accent-600 mt-2">{item.label}</div>
        </div>
      ))}
    </div>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-10">
        <a href={data.cta.primary.href} class="btn-primary w-full sm:w-auto">
          {data.cta.primary.label}
        </a>
        <a href={data.cta.secondary.href} class="btn-primary w-full sm:w-auto">
          {data.cta.secondary.label}
        </a>
      </div>
    </div>

  </div>
</section>
