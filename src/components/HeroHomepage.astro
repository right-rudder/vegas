---
const { data } = Astro.props;
---

<div class={data.styling}>
  <div class="max-w-4xl text-center text-accent-100 md:text-left">
    <div
      class="flex flex-col items-center gap-6 md:items-start lg:gap-8"
    >
      <p class="eyebrow font-semibold uppercase lg:text-base">
        {data.eyebrow}
      </p>
      <h1 class="max-w-4xl text-4xl font-bold md:text-6xl md:leading-20 lg:leading-18">
        {data.title}
      </h1>
      {data.paragraph && <p class="text-2xl font-semibold">{data.paragraph}</p>}
    </div>
  </div>
</div>
