---
import { FaArrowRight } from "react-icons/fa6";
import ImageComp from "../ImageComp.astro";

const example = {
  underHeader: "About us",
  title: "Get to Know Us",
  description:
    "Where quality flight training meets safety and support. Our fun family culture enhances top-notch instruction and meticulous aircraft maintenance. Since its inception, Vegas Aviation has continuously grown and adapted, enriching its offerings and facilities to align with the dynamic demands of the aviation sector.",
  image: {
    src: "/src/assets/about-us-cfi-team-vegas-aviation-discovery-flight.jpg",
    alt: "Vegas Aviation CFI team",
  },
  button: {
    title: "Contact Us",
    link: "/contact",
  },
  orientation: "left",
};

const { content = example } = Astro.props;
---

<section class="bg-accent-100 relative isolate z-0 overflow-hidden text-accent-900">
  <div class="mx-auto max-w-7xl px-5 py-12 md:px-8 md:py-16 lg:px-10 lg:py-20">
    <div class={`flex items-start gap-10 text-center sm:text-left lg:gap-14 ${content.orientation === "left" ? "flex-col lg:flex-row" : "flex-col-reverse lg:flex-row-reverse"}`}>
      {/* LEFT: Headline, quote, stat */}
      <div class="flex-1">
        <p class="eyebrow-dark inline-flex items-center gap-2 px-3 py-1 text-sm tracking-widest uppercase">
          <span class="size-1.5 rounded-full bg-primary-500/90"></span>
          {content.underHeader}
        </p>

        <h2 class="text-4xl leading-tight font-bold tracking-tight sm:text-5xl lg:text-6xl">{content.title}</h2>

        {/* Quote card (narrowed) */}
        <div class="mt-4 rounded-lg border border-white/10 bg-white/5">
          <div class="flex items-start gap-3">
            <p class="text-lg text-accent-900 whitespace-pre-line">
              {content.description}
            </p>
          </div>
        </div>

        {
          content.button && (
            <a href={content.button.link} class="btn-primary mt-5 w-fit mx-auto sm:mx-0">
              {content.button.title}
              <FaArrowRight />
            </a>
          )
        }
      </div>

      {/* RIGHT: Big image, body, CTA */}
      <div class="flex-1 mx-auto lg:pl-4">
        <figure class="relative">
          <ImageComp
            src={content.image.src}
            alt={content.image.alt}
            class={`aspect-4/3 w-full rounded-lg object-cover md:aspect-5/4 ${content.image.position ? content.image.position : "object-bottom"}`}
          />
        </figure>
      </div>
    </div>
  </div>
</section>
