---
import ImageComp from "./ImageComp.astro";
import { FaArrowRight } from "react-icons/fa";

const data = {
  eyebrow: "About Us",
  title: "A personalized pathway for every student",
  quote:
    "Vegas Aviation is a community built around safety, service, and mentorship. Led by experienced instructors, we are dedicated to helping aspiring pilots achieve their dreams with world-class training and unwavering support.",
  statValue: "+200",
  statLabel: "Five star reviews",
  body: "From your first flight lesson to earning your pilot's license and beyond, Vegas Aviation is with you every step of the way.",
  ctaLabel: "Schedule a Discovery Flight",
  ctaHref: "/",
  rightImage: {
    src: "/src/assets/cfi-student-lesson-vegas-aviation-las-vegas-pilot-training.jpg",
    alt: "Certified Flight Instructor with student on a indoors lesson",
  },
};
---

<section class="bg-accent-50 relative isolate z-0 overflow-hidden text-accent-900">
  {/* soft radial glow */}
  <div
    class="from-primary-300/30 pointer-events-none absolute inset-0 -z-10 bg-radial-[at_20%_40%] to-transparent to-60%"
  >
  </div>

  <div class="mx-auto max-w-7xl px-5 py-12 md:px-8 md:py-16 lg:px-10 lg:py-20">
    <div class="grid items-start gap-10 text-center sm:text-left lg:grid-cols-2 lg:gap-14">
      {/* LEFT: Headline, quote, stat */}
      <div>
        <p
          class="eyebrow inline-flex items-center gap-2 px-3 py-1 text-[11px] tracking-widest uppercase"
        >
          <span class="size-1.5 rounded-full bg-primary-400/90"></span>
          {data.eyebrow}
        </p>

        <h1
          class="text-4xl leading-tight font-bold tracking-tight sm:text-5xl lg:text-[56px]"
        >
          {data.title}
        </h1>

        {/* Quote card (narrowed) */}
        <div
          class="mt-6 rounded-2xl border border-white/10 bg-white/5"
        >
          <div class="flex items-start gap-3">
            <p class="text-lg text-accent-900 md:text-base/7">{data.quote}</p>
          </div>
        </div>

        {/* Stat (narrowed) */}
        <div class="mt-7 flex items-center justify-center gap-5 sm:justify-start">
          <span
            class="text-shadow-primary-/40 text-6xl font-extrabold text-primary-400 text-shadow-md sm:text-7xl"
          >
            {data.statValue}
          </span>
          <p class="text-md tracking-widest text-accent-700 uppercase text-left">
            {data.statLabel}
          </p>
        </div>
      </div>

      {/* RIGHT: Big image, body, CTA */}
      <div class="lg:pl-4">
        <figure class="relative">
          <ImageComp
            src={data.rightImage.src}
            alt={data.rightImage.alt}
            class="aspect-4/3 w-full rounded-4xl object-cover md:aspect-5/4"
          />
        </figure>

        <p class="mt-6 text-accent-900 md:text-lg">
          From your <a
            href="/"
            class="text-primary-400 underline transition-colors duration-300 ease-in-out hover:text-primary-300"
            >first flight lesson</a
          > to earning your <a
            href="/"
            class="text-primary-400 underline transition-colors duration-300 ease-in-out hover:text-primary-300"
            >pilot's license</a
          > and beyond, Vegas Aviation is with you every step of the way. Whether
          you're pursuing an <a
            href="/"
            class="text-primary-400 underline transition-colors duration-300 ease-in-out hover:text-primary-300"
            >instrument rating</a
          > or becoming a <a
            href="/"
            class="text-primary-400 underline transition-colors duration-300 ease-in-out hover:text-primary-300"
            >certified flight instructor</a
          >, we provide personalized training at <a
            href="/"
            class="text-primary-400 underline transition-colors duration-300 ease-in-out hover:text-primary-300"
            >North Las Vegas Airport</a
          >.
        </p>

        <a href={data.ctaHref} class="btn-primary-outline mt-5 w-fit mx-auto sm:mx-0">
          {data.ctaLabel}
          <FaArrowRight />
        </a>
      </div>
    </div>
  </div>
</section>
