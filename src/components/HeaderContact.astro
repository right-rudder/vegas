---
import { FACEBOOK_URL, INSTAGRAM_URL, PHONE_NUMBER_HEADER, ADDRESS_CITY, ADDRESS_STATE } from "../data/consts";
import { FaPhoneSquareAlt } from "react-icons/fa";
---

<div class="w-full bg-linear-to-br from-accent-200 via-accent-100 to-accent-300 z-0 h-12 px-4 text-accent-900 lg:px-0">
  <div
    class="mx-auto font-bebas flex items-center align-middle h-full justify-between"
  >
    <p class="ml-5 font-bebas tracking-widest text-xl hidden lg:block">
      Flight Training in {ADDRESS_CITY}, {ADDRESS_STATE}
    </p>
    <div class="flex gap-3 w-full lg:w-auto">
      <div
        class="items-center justify-center align-middle gap-x-3 hidden lg:flex"
      >
        <a
          href={INSTAGRAM_URL}
          target="_blank"
          aria-label="Instagram"
          title="Instagram"
          class="hover:text-primary-500 transition-all duration-300 ease-in-out"
        >
          <svg viewBox="0 0 30 30" fill="currentColor" class="h-6">
            <circle cx="15" cy="15" r="4"></circle>
            <path
              d="M19.999,3h-10C6.14,3,3,6.141,3,10.001v10C3,23.86,6.141,27,10.001,27h10C23.86,27,27,23.859,27,19.999v-10   C27,6.14,23.859,3,19.999,3z M15,21c-3.309,0-6-2.691-6-6s2.691-6,6-6s6,2.691,6,6S18.309,21,15,21z M22,9c-0.552,0-1-0.448-1-1   c0-0.552,0.448-1,1-1s1,0.448,1,1C23,8.552,22.552,9,22,9z"
            ></path>
          </svg>
        </a>
        <a
          href={FACEBOOK_URL}
          target="_blank"
          aria-label="Facebook"
          title="Facebook"
          class="hover:text-primary-500 transition-all duration-300 ease-in-out"
        >
          <svg viewBox="0 0 24 24" fill="currentColor" class="h-5">
            <path
              d="M22,0H2C0.895,0,0,0.895,0,2v20c0,1.105,0.895,2,2,2h11v-9h-3v-4h3V8.413c0-3.1,1.893-4.788,4.659-4.788 c1.325,0,2.463,0.099,2.795,0.143v3.24l-1.918,0.001c-1.504,0-1.795,0.715-1.795,1.763V11h4.44l-1,4h-3.44v9H22c1.105,0,2-0.895,2-2 V2C24,0.895,23.105,0,22,0z"
            ></path>
          </svg>
        </a>
      </div>

      <a
        href=`tel:${PHONE_NUMBER_HEADER}`
        aria-labelledby="Call Us Now"
        title="Call Us Now"
        class="flex align-middle tracking-widest ml-auto items-center text-right text-lg font-bold transition-all duration-300 ease-in-out hover:text-primary-500 lg:ml-0 lg:mr-5 lg:text-xl"
        aria-label="Call telephone Link"
      >
        <FaPhoneSquareAlt className="mr-2 text-xl lg:text-2xl" />
        {PHONE_NUMBER_HEADER}</a
      >
    </div>
  </div>
</div>