---
import ImageComp from "./ImageComp.astro";

const data = {
  eyebrow: "YOUR PILOT CAREER STARTS HERE",
  heading: "Take Off with Vegas Aviation",
  description: "Experience personalized flight training with our instructors, they are passionate people dedicated to your success. Whether you're starting your first lesson or advancing your skills, Vegas Aviation offers a supportive community and expert guidance every step of the way.",
  primary: { label: "Book a Discovery Flight", href: "/discovery-flight" },
  image: {
    src: "/src/assets/stock/airplane-takeoff-view-below-clouds-above-vegas-aviation-henderson-flight-school.jpg",
    alt: "View from below of an airplane taking off",
  },
};
---

<section class="relative isolate overflow-hidden text-white">
  {/* Background image */}
  <div class="pointer-events-none absolute inset-0 -z-30" aria-hidden="true">
    <ImageComp
      src={data.image.src}
      alt={data.image.alt}
      class="h-full w-full object-cover brightness-50"
      loading="lazy"
      decoding="async"
    />
  </div>

  {/* Dark overlay on image */}
  <div
    class="pointer-events-none absolute inset-0 -z-20 bg-linear-to-b from-accent-900 via-transparent to-accent-900"
    aria-hidden="true"
  >
  </div>

  <div
    class="relative grid items-center gap-6 px-6 py-16 sm:px-10 lg:grid-cols-2 lg:gap-10 lg:px-16 lg:py-24"
  >
    <div class="max-w-xl text-center sm:text-left">
      <p
        class="eyebrow text-primary-200/80 mb-3 inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-sm tracking-widest uppercase mx-auto"
      >
        <span class="size-1.5 rounded-full bg-primary-400/90"></span>
        {data.eyebrow}
      </p>
      <h2
        class="mt-3 text-4xl leading-tight font-extrabold sm:text-5xl lg:text-6xl"
      >
        {data.heading}
      </h2>
      <p class="mt-5 max-w-lg text-base sm:text-lg">
        {data.description}
      </p>

      <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:gap-6">
        <a
          href={data.primary.href}
          class="btn-primary-outline box-shadow-[0_4px_20px_rgba(255,211,0,0.25)] hover:brightness-95 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-300 focus-visible:ring-offset-2"
          >{data.primary.label}</a
        >
      </div>
    </div>
  </div>
</section>
