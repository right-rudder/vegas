---
import { FaArrowRight } from "react-icons/fa";
import { FaCheckCircle } from "react-icons/fa";
import ImageComp from "./ImageComp.astro";

const data = {
  eyebrow: "YOUR JOURNEY",
  title: "How to Become a Pilot",
  subTitle: "Embark on the exciting journey to becoming a pilot with Vegas Aviation by following these structured steps.",
  steps: [
    {
      number: "01",
      title: "Book a Discovery Flight",
      description: "Experience the thrill of flying firsthand. During your discovery flight, you'll take the controls and get a taste of what pilot training is all about.",
      image: {
        src: "/src/assets/stock/bar-chart-background-vegas-aviation-pilot-career.png",
        alt: "Discovery flight experience"
      }
    },
    {
      number: "02",
      title: "Get Your Medical Certificate",
      description: "Schedule an appointment with an FAA-certified Aviation Medical Examiner (AME) to obtain your medical certificateâ€”a requirement before you can solo.",
      image: {
        src: "/src/assets/stock/bar-chart-background-vegas-aviation-pilot-career.png",
        alt: "Medical certificate process"
      }
    },
    {
      number: "03",
      title: "Start Your Training",
      description: "Begin your structured flight training with one of our experienced certified flight instructors. You'll progress through ground school and flight lessons at your own pace.",
      image: {
        src: "/src/assets/stock/bar-chart-background-vegas-aviation-pilot-career.png",
        alt: "Flight training session"
      }
    },
    {
      number: "04",
      title: "Pass Your Checkride",
      description: "Complete your training by passing both the written exam and practical flight test with an FAA examiner to earn your pilot certificate.",
      image: {
        src: "/src/assets/stock/bar-chart-background-vegas-aviation-pilot-career.png",
        alt: "Checkride completion"
      }
    }
  ],
  cta: {
    label: "Start Your Journey Today",
    href: "/enroll"
  }
};
---

<section class="relative isolate overflow-hidden bg-white text-accent-900">
  <div class="mx-auto max-w-7xl px-5 py-16 md:px-8 md:py-20 lg:px-10 lg:py-24">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <p class="eyebrow-dark inline-flex items-center gap-2 tracking-widest">
        <span class="size-1.5 rounded-full bg-primary-500"></span>
        {data.eyebrow}
      </p>
      <h2 class="mt-4 text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl lg:text-6xl">
        {data.title}
      </h2>
      <p class="mt-6 text-lg md:text-xl text-accent-700">
        {data.subTitle}
      </p>
    </div>

    <!-- Steps -->
    <div class="space-y-16 lg:space-y-24">
      {data.steps.map((step, index) => (
        <div class={`flex flex-col lg:flex-row items-center gap-8 lg:gap-12 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
          <!-- Image -->
          <div class="w-full lg:w-1/2">
            <div class="relative aspect-4/3 overflow-hidden rounded-lg shadow-xl">
              <ImageComp
                src={step.image.src}
                alt={step.image.alt}
                class="h-full w-full object-cover object-center"
              />
              <!-- Step number overlay -->
              <div class="absolute top-6 left-6 flex items-center justify-center size-16 rounded-full bg-primary-500 text-white font-bold text-2xl shadow-lg">
                {step.number}
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="w-full lg:w-1/2">
            <h3 class="text-3xl font-bold leading-tight sm:text-4xl">
              {step.title}
            </h3>
            <p class="mt-4 text-lg text-accent-700 leading-relaxed">
              {step.description}
            </p>
            {index === 0 && (
              <a href="/enroll" class="mt-6 btn-primary w-fit">
                Book a Discovery Flight
                <FaArrowRight />
              </a>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="mt-16 text-center">
      <a href={data.cta.href} class="btn-primary">
        {data.cta.label}
        <FaArrowRight />
      </a>
    </div>
  </div>
</section>
